# dArchiva Environment Configuration
# Copy this to .env and fill in your values

# Flask
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_DEBUG=1
FLASK_APP=run.py

# Database (using psycopg v3 driver)
# For Azure PostgreSQL (production):
DATABASE_URL=postgresql+psycopg://azureuser:Abcd1234.@lindela16.postgres.database.azure.com:5432/arcv
# For local Docker:
# DATABASE_URL=postgresql+psycopg://darchiva:darchiva_dev@localhost:5432/darchiva

# Redis (Celery broker)
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# S3 Storage
# For AWS:
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# For MinIO (development):
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=darchiva-documents
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# Scanner
SCANNER_TEMP_DIR=/tmp/darchiva/scans

# OCR
OCR_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=INFO
